<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/width_pop_up_free_token"
            android:layout_height="@dimen/height_pop_up_free_token"
            android:layout_marginLeft="@dimen/margin_left__pop_up_free_token"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5" />

                <ImageView
                    android:id="@+id/skip"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:src="@drawable/skip_kotak" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.7"
                android:src="@drawable/icon_gratis_token" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-25dp"
                    android:layout_weight="3.6"
                    android:background="@drawable/bcg_form_pop_up_kupon_gratis_baru"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:weightSum="5">

                    <EditText
                        android:id="@+id/inputanNoHPopupGratisToken"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:background="@drawable/bcg_edit_teks_popup_kupon_gratis_baru"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_isian_pop_up_free_token" />

                    <RelativeLayout
                        android:id="@+id/btnOkePopupGratisToken"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="OK"
                            android:textColor="#FF0000"
                            android:textSize="@dimen/text_size_btnOk_popup_free_token"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>